<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <VSEWW.RewardDef>
    <defName>VSEWW_NormalPawnJoins</defName>
    <texPath>UI/Rewards/RewardPawnJoins_Normal</texPath>
    <label>Colonist joins</label>
    <description>A single colonist worth minimum 50 and up to 125 combat points joins the colony</description>
    <category>Normal</category>
	<type>Misc</type>
    <randomPawns>
      <li>
        <minCombatPower>50</minCombatPower>
        <maxCombatPower>125</maxCombatPower>
        <count>1</count>
      </li>
    </randomPawns>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_NormalResourceDrop</defName>
    <texPath>UI/Rewards/RewardResourceDrop_Normal</texPath>
    <category>Normal</category>
    <label>Resource drop</label>
    <description>Cargo pods drop 250 wood, 250 Bronze, 25 Component Medieval</description>
    <items>
      <li>
        <thing>WoodLog</thing>
        <count>250</count>
      </li>
      <li>
        <thing>Bronze</thing>
        <count>250</count>
      </li>
      <li>
        <thing>ComponentMedieval</thing>
        <count>25</count>
      </li>
    </items>
  </VSEWW.RewardDef>

