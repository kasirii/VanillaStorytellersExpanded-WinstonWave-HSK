  <VSEWW.RewardDef>
    <defName>VSEWW_NormalWeaponsDrop</defName>
    <texPath>UI/Rewards/RewardWeaponsDrop_Normal</texPath>
    <label>Normal weapons drop</label>
	<type>Combat</type>
    <description>Cargo pods 3 random Medieval weapons, quality is normal</description>
    <category>Normal</category>
    <randomItems>
       <li>
        <thingCategories>
          <li>CrossbarRanged</li>
          <li>BowRanged</li>
        </thingCategories>
        <excludeThingCategories>
          <li MayRequire="CETeam.CombatExtended">Ammo</li>
        </excludeThingCategories>
        <quality>Normal</quality>
        <count>2</count>
      </li>
      <li>
        <randomFrom>
          <li>MeleeWeapon_Dagger</li>
          <li>MeleeWeapon_Gladius</li>
          <li>MeleeWeapon_LongSword</li>
          <li>MeleeWeapon_GreatSword</li>
          <li>MeleeWeapon_Morningstar</li>
          <li>MeleeWeapon_Scimitar</li>
          <li>MeleeWeapon_Glaive</li>
          <li>MeleeWeapon_Partisan</li>
          <li>NorbalMeleeWeapon_ShortSwordtwo</li>
          <li>NorbalMeleeWeapon_ShortSword</li>
          <li>NorbalMeleeWeapon_Ax</li>
          <li>NorbalMeleeWeapon_Bigax</li>
          <li>MeleeWeapon_Axe</li>
          <li>MeleeWeapon_Warhammer</li>
        </randomFrom>
        <quality>Normal</quality>
        <count>1</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

