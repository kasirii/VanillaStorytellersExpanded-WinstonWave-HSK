<Defs>
  <VSEWW.RewardDef>
    <defName>VSEWW_PoorPawnJoins</defName>
    <texPath>UI/Rewards/RewardPawnJoins_Poor</texPath>
    <label>Colonist joins</label>
    <description>A single colonist worth up to 50 combat points joins the colony</description>
    <category>Poor</category>
	<type>Misc</type>
    <randomPawns>
      <li>
        <maxCombatPower>50</maxCombatPower>
        <count>1</count>
      </li>
    </randomPawns>
  </VSEWW.RewardDef>

