  <VSEWW.RewardDef>
    <defName>VSEWW_PoorWeaponsDrop</defName>
    <texPath>UI/Rewards/RewardWeaponsDrop_Poor</texPath>
    <label>Poor weapons drop</label>
    <description>Cargo pods 3 random Neolithic weapons, maximum quality is poor</description>
    <category>Poor</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>ThrownRanged</li>
          <li>BowRanged</li>
        </thingCategories>
        <techLevel>Neolithic</techLevel>
        <excludeThingCategories>
          <li MayRequire="CETeam.CombatExtended">Ammo</li>
        </excludeThingCategories>
        <quality>Poor</quality>
        <count>2</count>
      </li>
      <li>
        <randomFrom>
          <li>MeleeWeapon_Ikwa</li>
          <li>MeleeWeapon_Spear</li>
          <li>MeleeWeapon_Mace</li>
          <li>MeleeWeapon_Club</li>
          <li>MeleeWeapon_Schiv</li>
        </randomFrom>
        <quality>Poor</quality>
        <count>1</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

